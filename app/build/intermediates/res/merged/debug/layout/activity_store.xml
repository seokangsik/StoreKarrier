<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".StoreActivity">

    <LinearLayout
        android:id="@+id/store_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/activity_store_price"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5.0"
                        android:textSize="17dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 1박"
                        android:textSize="17dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RatingBar

                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/activity_store_ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        android:isIndicator="true"
                        android:max="5" />
                    <TextView
                        android:id="@+id/activity_store_rating_text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>
            <Button

                android:id="@+id/reserve_btn"
                android:text="예약하기"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@color/colorRedtone"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_store_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/default_img"
                />

            <TextView

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorDimGray"
                android:id="@+id/activity_store_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:text="STORE NAME"
                android:textSize="40dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="20dp">
                <TextView
                    android:textColor="@color/colorDimGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingLeft="5dp"
                    android:textSize="20dp"
                    android:text="Host : "/>
                <TextView
                    android:id="@+id/activity_store_host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorCrimson"
                    android:textSize="20dp"
                    android:text="Name"/>
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="님"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/activity_store_host_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:background="@color/colorPrimaryDark"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary" />

            <fragment
                android:id="@+id/store_map"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                class="com.google.android.gms.maps.MapFragment"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/colorGray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:orientation="horizontal"
                        android:id="@+id/message_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                        <TextView
                            android:textColor="@color/colorDimGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="호스트에게 연락하기"
                            android:textSize="17dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="메세지"
                                android:textColor="@color/colorCrimson"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>


            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="1dp">
            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    android:textColor="@color/colorDimGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보관소 신고하기"
                    android:layout_gravity="center"
                    android:textSize="17dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_gravity="right"
                        android:textColor="@color/colorCrimson"
                        android:textSize="17dp"
                        android:text="신고하기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="보관소 주변 추천 장소"
                android:textColor="@color/colorDimGray"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:paddingLeft="25dp"
                android:id="@+id/recommend_place_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>